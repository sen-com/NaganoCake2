<div class="container">
  <div class="row mt-4">
    <div class="col-6 text-center">
      <strong>ジャンル編集</strong>
       <%= form_for @genre, url: admin_genre_path(@genre) do |f| %>
         <div class="row form-group mt-3">
            <div class="col-2">
                <p class="">ジャンル</p>
            </div>
            <div class="col-3 input-sm">
                <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control mx-0' %>

            </div>
            <div class="col-2">
                <%= f.radio_button :effective_flag, :true %>有効
            </div>
            <div class="col-2">
                <%= f.radio_button :effective_flag, :false %>無効
            </div>
            <div class="col-2">
                <%= f.submit "変更を保存する", class: "btn btn-info" %>
            </div>
         </div>
       <% end %>
    </div>
  </div>
</div>