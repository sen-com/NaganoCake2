<div class="container">
  <div class="row mt-4">
    <div class="col-6 text-center">
      <strong>ジャンル一覧・追加</strong>
       <%= form_for @genre, url: admin_genres_path do |f| %>
         <div class="row form-group mt-3">
            <div class="col-2">
                <p class="">ジャンル</p>
            </div>
            <div class="col-3 input-sm">
                <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control mx-0' %>

            </div>
            <div class="col-2">
                <%= f.radio_button :effective_flag, :true %>有効
            </div>
            <div class="col-2">
                <%= f.radio_button :effective_flag, :false %>無効
            </div>
            <div class="col-2">
                <%= f.submit "追加", class: "btn btn-info" %>
            </div>
         </div>
       <% end %>
    </div>
  </div>
  <div class="row">
  <div class="col-6">
      <table class="table my-3">
        <thead class="thead-light">
          <tr>
            <th scope="col">ジャンル</th>
            <th scope="col">状態</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= genre.name %>
            </td>
            <td>
              <% if genre.effective_flag? %>
                有効
              <% else %>
                無効
              <% end %>
            </td>
            <td>
              <%= link_to "編集", edit_admin_genre_path(genre), class: "btn btn-info" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    </div>
</div>