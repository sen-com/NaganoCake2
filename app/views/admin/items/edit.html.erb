<div class="container">
  <div class="m-5">
    <strong>商品詳細</strong>
  </div>
  <%= form_for @item, url: admin_item_path(@item), class: "form-group" do |f| %>
  <div class="row">
    <div class="col-4">
      <%= attachment_image_tag @item, :image, size: '200x150' , format: 'jpeg', class: "card-img-top", fallback: "no_image.png",　size:'250x200' %><br>
      <%= f.attachment_field :image, placeholder: "ファイルを選択" %>
    </div>
    <div class="col-6">
      <div class="row mb-2">
          <div class="col-4">商品名</div>
          <div class="col-8"><%= f.text_field :name,class: 'form-control' %></div>
      </div>
      <div class="row mb-2">
          <div class="col-4">商品説明</div>
          <div class="col-8"><%= f.text_area :description, class: 'form-control' %></div>
      </div>
      <div class="row mb-2">
          <div class="col-4">ジャンル</div>
          <div class="col-8">
            <%= f.collection_select :genre_id, Genre.where(effective_flag: "true"), :id, :name, include_blank: "選択して下さい" %>
          </div>
      </div>
      <div class="row mb-2">
          <div class="col-4">税抜価格</div>
          <div class="col-8"><%= f.text_field :price_excluding_tax, class: 'form-control' %></div>
      </div>
      <div class="row mb-2">
          <div class="col-4">販売ステータス</div>
          <div class="col-8">
            <%= f.select :is_working, [["有効", true], ["無効", false]], include_blank: "選択して下さい" %>
          </div>
      </div>
    </div>
    <div class="col-2 d-flex align-items-end">
        <%= f.submit "変更を保存", class: "btn btn-info btn-lg" %>
    </div>
  </div>
  <% end %>
</div>