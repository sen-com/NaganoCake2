<div class="container mt-3">
  <div class=""><strong>商品一覧（全<%= @items.count %>件）</strong></div>
  <div class="text-right">
    <%= link_to new_admin_item_path do %>
      <button type="button" class="btn btn-primary rounded-circle">＋</button>
    <% end %>
  </div>
  <div class="row mt-3">
      <table class="table my-3">
        <thead class="thead-light">
          <tr>
            <th scope="col">商品ID</th>
            <th scope="col">商品名</th>
            <th scope="col">税抜価格</th>
            <th scope="col">ジャンル</th>
            <th scope="col">ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @items.each do |item| %>
          <tr>
            <td>
              <%= item.id %>
            </td>
            <td>
              <%= link_to admin_item_path(item) do %>
                <%= item.name %>
              <% end %>
            </td>
            <td>
              <%= item.price_excluding_tax %>
            </td>
            <td>
            <% if item.genre.present? %>
              <%= item.genre.name %>
            <% end %>
            </td>
            <td>
              <% if item.is_working? %>
                販売中
              <% else %>
                販売停止中
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
</div>