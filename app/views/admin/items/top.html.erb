<div class="container">
  <div class="row mx-5">
    <div class="col-3">
    </div>
    <div class="col-9">
      <div class="my-4">
        <strong class="">商品一覧</strong>
      </div>
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-4 mb-2">
            <div class="card">
                <%= attachment_image_tag item, :image, size: '200x150' , format: 'jpeg', class: "card-img-top", fallback: "no_image.png",　size:'100x100' %>
                <div class="card-body">
                <h5 class="card-title"><%= item.name %></h5>
                <p class="card-text">¥<%= item.price_excluding_tax %></p>
                </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
 </div>
</div>