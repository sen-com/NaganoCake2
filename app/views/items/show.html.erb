<div class="container">
  <div class="row mt-5">
    <div class="col-2"></div>
    <div class="col-4">
      <%= attachment_image_tag @item, :image, size: '200x200' , format: 'jpeg', class: "card-img-top", fallback: "no_image.png" %>
    </div>
    <div class="col-5">
      <h2><%= @item.name %></h2>
      <p><%= @item.description %></p>
      <div class="strong">
        ¥<%= @item.price_excluding_tax %>（税込み）
      </div>
      <%= form_for @cart_item, url:cart_items_path do |f| %>
        <%= f.select :amount, [1,2,3,4,5,6,7,8,9] %>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <%= f.submit "カートに入れる", class: "btn btn-info" %>
      <% end %>
    </div>
  </div>
</div>