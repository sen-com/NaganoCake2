<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <nav class="navbar navbar-expand-md  navbar-light bg-info">
  <% if admin_signed_in? %>
    <a class="navbar-brand text-light" href="/admin/top">NagoyaCake</a>
  <% else %>
    <a class="navbar-brand text-light" href="/">NagoyaCake</a>
  <% end %>  
    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#bs-navi" aria-controls="bs-navi" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
 
    <div class="collapse navbar-collapse justify-content-end" id="bs-navi">
      <% if end_user_signed_in? %>
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to(items_path, class: 'nav-link text-light') do %>
              商品一覧
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to( end_users_path, class: 'nav-link text-light') do %>
              マイページ
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to( cart_items_path, class: 'nav-link text-light') do %>
              カート
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to(destroy_end_user_session_path, method: :delete, class: 'nav-link text-light') do %>
              ログアウト
            <% end %>
          </li>
        </ul>
      <% elsif admin_signed_in? %>
        <div class="row">
        <div class="col-12">
        <ul class="navbar-nav text-light">
          <li class="nav-item">
            <%= link_to(admin_items_path, class: 'nav-link text-light') do %>
              商品一覧
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to( admin_end_users_path, class: 'nav-link text-light') do %>
              会員一覧
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to( admin_orders_path, class: 'nav-link text-light') do %>
              注文履歴一覧
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to( admin_genres_path, class: 'nav-link text-light') do %>
              ジャンル一覧
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to(destroy_admin_session_path, method: :delete, class: 'nav-link text-light') do %>
              ログアウト
            <% end %>
          </li>
        </ul>
        </div>
        </div>
            <div class="col-3">
              <%= form_tag(admin_items_path, :method => "get") do %>  
                <div class="input-group input-group-sm">  
                  <%= text_field_tag :search, params[:search], class:" form-control" %>  
                  <%= submit_tag "検索", :name => nil , class: "input-group-btn btn btn-sm"%>  
                </div>  
              <% end %>
            </div>
      <% else %>
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to(items_path, class: 'nav-link text-light') do %>
              商品一覧
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to( new_end_user_registration_path, class: 'nav-link text-light') do %>
              新規登録
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to(new_end_user_session_path, class: 'nav-link text-light') do %>
              ログイン
            <% end %>
          </li>
        </ul>
      <% end %>
    </div>
  </nav>
<body>
  <%= yield %>
</body>

</html>
