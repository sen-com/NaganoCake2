<div class="container">
  <div class="m-5">
    <strong>配送先登録/一覧</strong>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
          <td>
            <%= order.post_number %><br>
            <%= order.address %><br>
            <%= order.name %>
          </td>
          <td>
            <% order.order_details.each do |order_detail| %>
              <%= order_detail.item.name %><br>
            <% end %>
          </td>
          <td><%= order.totsl_payment  %>円</td>
          <td><%= order.order_status_i18n %></td>
          <td><%= link_to '表示する', order %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>